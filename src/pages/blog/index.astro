---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Blog"
  description="Game design thoughts, fantasy sports takes, and whatever else is on Ben's mind."
>
  <header class="mb-10">
    <h1
      class="text-4xl font-bold mb-3"
      style="font-family: var(--font-display); color: var(--color-heading);"
    >
      Blog
    </h1>
    <p style="color: var(--color-muted);">
      Game design thoughts. Fantasy takes. Whatever's on my mind.
    </p>
  </header>

  {posts.length > 0 ? (
    <div class="flex flex-col gap-4">
      {posts.map(post => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
        />
      ))}
    </div>
  ) : (
    <p style="color: var(--color-muted);">Nothing here yet. Check back soon.</p>
  )}
</BaseLayout>
