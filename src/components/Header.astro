---
const navLinks = [
  { href: '/',        label: 'Home'    },
  { href: '/about',   label: 'About'   },
  { href: '/blog',    label: 'Blog'    },
  { href: '/now',     label: 'Now'     },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath === href || currentPath.startsWith(href + '/');
}
---

<header class="w-full border-b border-[#2a2a2a]">
  <div class="max-w-3xl mx-auto px-6 py-5 flex items-center justify-between">
    <a
      href="/"
      class="font-bold text-lg text-[#f5f5f5] tracking-tight hover:text-[#a78bfa] transition-colors duration-200"
      style="font-family: var(--font-display);"
    >
      ben atkins
    </a>
    <nav aria-label="Main navigation">
      <ul class="flex gap-6 items-center list-none m-0 p-0">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class={`text-sm font-medium transition-colors duration-200 ${
                isActive(link.href)
                  ? 'text-[#a78bfa]'
                  : 'text-[#6b7280] hover:text-[#f5f5f5]'
              }`}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
